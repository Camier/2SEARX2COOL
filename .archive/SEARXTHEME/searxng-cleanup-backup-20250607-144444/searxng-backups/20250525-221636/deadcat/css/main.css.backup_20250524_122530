/* ALFREDISGONE DEADCAT THEME v4.0 - Harmonized Terminal Theme */

/* =========================== */
/* 1. CSS Variables & Reset    */
/* =========================== */
:root {
    /* Terminal Color Palette */
    --terminal-black: #000000;
    --terminal-green: #00ff00;
    --matrix-green: #00ff41;
    --phosphor-green: #33ff00;
    --terminal-amber: #ffb000;
    --terminal-red: #ff0040;
    --terminal-cyan: #00ffff;
    --terminal-blue: #00b4ff;
    --terminal-magenta: #ff00ff;
    --terminal-dim-green: rgba(0, 255, 0, 0.7);
    --terminal-bg: #0a0a0a;
    --terminal-border: #00ff00;
    
    /* Readability System Variables */
    --animation-speed: 1;
    --glow-intensity: 1;
    --particle-opacity: 1;
    --text-shadow-layers: 4;
    --background-effects: 1;
    --matrix-opacity: 0.15;
    --scanline-opacity: 1;
    
    --font-mono: 'JetBrains Mono', 'Cascadia Code', 'Fira Code', 'Courier New', monospace;
}

/* Readability Mode: Balanced */
body.readability-balanced {
    --animation-speed: 0.5;
    --glow-intensity: 0.6;
    --particle-opacity: 0.5;
    --text-shadow-layers: 2;
    --background-effects: 0.7;
    --matrix-opacity: 0.08;
    --scanline-opacity: 0.5;
}

/* Readability Mode: High */
body.readability-high {
    --animation-speed: 0;
    --glow-intensity: 0.3;
    --particle-opacity: 0;
    --text-shadow-layers: 1;
    --background-effects: 0;
    --matrix-opacity: 0;
    --scanline-opacity: 0;
}

/* Global Reset */
*, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

