# 2SEARX2COOL Environment Configuration Example
# Copy this file to .env and configure as needed

# Server Configuration
SEARXNG_PORT=8888
SEARXNG_BIND_ADDRESS=127.0.0.1
SEARXNG_BASE_URL=http://localhost:8888
SEARXNG_SECRET_KEY=change-this-to-a-random-secret-key

# External Server Mode (optional)
# Uncomment to use an existing SearXNG instance instead of the bundled one
# EXTERNAL_SEARXNG_URL=https://searx.example.com

# Development
NODE_ENV=production
ELECTRON_ENABLE_LOGGING=0
DEBUG=

# Security
ENABLE_CONTENT_SECURITY_POLICY=true
ALLOWED_ORIGINS=http://localhost:8888,http://127.0.0.1:8888

# Features
ENABLE_MIDI_SUPPORT=true
ENABLE_AUTO_UPDATE=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Paths (relative to app root)
DATA_DIR=./data
LOGS_DIR=./logs
PLUGINS_DIR=./plugins

# Performance
MAX_SEARCH_RESULTS=100
SEARCH_TIMEOUT=30000
CACHE_SIZE_MB=100

# UI Preferences
DEFAULT_THEME=system
DEFAULT_LANGUAGE=en
MINIMIZE_TO_TRAY=true
START_MINIMIZED=false