{
  "name": "2searx2cool",
  "version": "0.2.0",
  "description": "ðŸŽµ Native desktop experience for SearXNG-Cool - 27+ music search engines with offline-first architecture",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron-vite dev",
    "build": "cross-env NODE_ENV=production electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration", 
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "typecheck": "tsc --noEmit",
    "build:prod": "cross-env NODE_ENV=production electron-vite build --config webpack.optimization.config.js",
    "analyze": "cross-env ANALYZE=true npm run build:prod",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "optimize:assets": "node scripts/optimize-assets.js",
    "build:optimized": "npm run build:prod && npm run optimize:assets",
    "dist:optimized": "npm run build:optimized && electron-builder --config electron-builder.optimization.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Camier/2SEARX2COOL.git"
  },
  "keywords": [
    "electron",
    "searxng",
    "music",
    "search",
    "desktop",
    "offline-first",
    "plugin-system",
    "midi"
  ],
  "author": "Camier",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/Camier/2SEARX2COOL/issues"
  },
  "homepage": "https://github.com/Camier/2SEARX2COOL#readme",
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@playwright/test": "^1.44.0",
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitest/ui": "^1.6.0",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "typescript": "^5.4.0",
    "vite": "^5.3.0",
    "vitest": "^1.6.0",
    "terser-webpack-plugin": "^5.3.9",
    "compression-webpack-plugin": "^11.1.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "inspectpack": "^4.7.1",
    "sharp": "^0.33.2",
    "terser": "^5.27.0",
    "clean-css": "^5.3.3",
    "html-minifier-terser": "^7.2.0",
    "chalk": "^4.1.2"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.7.2",
    "better-sqlite3": "^11.0.0",
    "chokidar": "^3.6.0",
    "electron-log": "^5.1.5",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.0",
    "express": "^4.19.2",
    "node-cache": "^5.1.2",
    "p-queue": "^8.0.1",
    "zod": "^3.23.8",
    "easymidi": "^3.1.0",
    "@sentry/electron": "^4.20.0"
  },
  "optionalDependencies": {
    "usb": "^2.13.0"
  },
  "build": {
    "appId": "com.camier.2searx2cool",
    "productName": "2SEARX2COOL",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "!node_modules/**/*",
      "node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Audio;Network;Music",
      "icon": "build/icon.png",
      "desktop": {
        "StartupNotify": "true"
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "protocols": [
      {
        "name": "2searx2cool",
        "schemes": ["2searx2cool"]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Camier",
        "repo": "2SEARX2COOL"
      }
    ]
  }
}